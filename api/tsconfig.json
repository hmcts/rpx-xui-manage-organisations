{
    "compileOnSave": false,
    "compilerOptions": {
        "paths": { "*": ["types/*"] },
        "outDir": "../dist/rpa-pui-manager/api",
        "target": "es5",
        "types": [
            "node",
            "mocha",
            "rxjs"
        ],
        "typeRoots": [
          "./customTypings",
          "node_modules/@types"
        ],
        "baseUrl": ".",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "**/*.ts",
        "../*.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
