{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2022",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "hmcts-form-builder": [
        "dist/hmcts-form-builder"
      ],
      "hmcts-form-builder/*": [
        "dist/hmcts-form-builder/*"
      ],
      "gov-ui": [
        "dist/gov-ui"
      ],
      "gov-ui/*": [
        "dist/gov-ui/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
